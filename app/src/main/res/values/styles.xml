<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalendarDateText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MangoDialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorOnSurface">@color/black</item> <!-- main text color -->
        <item name="colorOnBackground">@color/black</item> <!-- secondary text color -->
        <item name="android:textColor">@color/black</item> <!-- ensure text is dark -->
        <item name="shapeAppearanceSmallComponent">@style/RoundedDialogShape</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/MangoDialogButtonPositive</item>
        <item name="buttonBarNegativeButtonStyle">@style/MangoDialogButtonNegative</item>
        <item name="android:windowElevation">8dp</item>
    </style>


    <!-- ðŸ‹ Softer rounded corners -->
    <style name="RoundedDialogShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item> <!-- ðŸ‘ˆ increased from 22dp -->
    </style>

    <style name="MangoDialogButtonPositive" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MangoDialogButtonNegative" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
