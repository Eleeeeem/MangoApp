<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mangga"
    android:padding="16dp"
    tools:context=".TreeHistoryActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸŒ³ Mango Scan History"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Section Label -->
    <TextView
        android:id="@+id/sectionLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disease Records"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="6dp" />

    <!-- RecyclerView container (scrollable area) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/diseaseRc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:clipToPadding="false"
        android:paddingBottom="12dp"
        android:overScrollMode="ifContentScrolls"
        tools:listitem="@layout/item_treehistory" />

    <!-- Empty/healthy state label -->
    <TextView
        android:id="@+id/healthyTagTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mango is Healthy ðŸƒ"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:visibility="gone" />

</LinearLayout>
