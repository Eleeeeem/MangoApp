<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/mangga"
    android:padding="30dp"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFF176"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Verify Phone Number"
                android:textColor="#2E7D32"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingBottom="10dp" />

            <!-- Phone Display -->
            <TextView
                android:id="@+id/tvPhoneShown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+63xxxxxxxxxx"
                android:textColor="#4E342E"
                android:textSize="16sp"
                android:layout_marginBottom="10dp" />

            <!-- OTP Group -->
            <LinearLayout
                android:id="@+id/groupOtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btnSendOtp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send OTP"
                    android:backgroundTint="#43A047"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etOtp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter OTP"
                    android:inputType="number"
                    android:background="@android:color/white"
                    android:padding="12dp"
                    android:layout_marginTop="8dp"
                    android:textColor="#4E342E" />

                <Button
                    android:id="@+id/btnVerifyOtp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Verify OTP"
                    android:backgroundTint="#2E7D32"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BDBDBD"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                android:id="@+id/dividerNewPassword" />

            <!-- New Password Section -->
            <LinearLayout
                android:id="@+id/layoutNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set a New Password"
                    android:textColor="#2E7D32"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingBottom="8dp" />

                <EditText
                    android:id="@+id/etNewPasswordSms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New Password"
                    android:background="@android:color/white"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:textColor="#4E342E"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/etConfirmPasswordSms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    android:background="@android:color/white"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:textColor="#4E342E"
                    android:layout_marginTop="8dp" />

                <Button
                    android:id="@+id/btnSetNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update Password"
                    android:backgroundTint="#F57C00"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:layout_marginTop="12dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
